<h1> Cocktail </h1>
<h3> <%= @cocktail.name %> </h3>
<% if @cocktail.photo.attached? %>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
<%= image_tag "Cocacola.jpg", height: 500, width: 700, crop: :fill %>
<% end %>

<ul>
	<% @cocktail.doses.each do |dose| %>
	<% link_to 'Add ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary'%>
		<li>
			<%= dose.description%><%= dose.ingredient.name%>
			<%= link_to 'Remove', dose_path(dose), method: :delete,
			data: { confirm: 'Are you sure?'} %>
		</li>
	<% end %>
</ul>
<%= render "doses/new" %>
<%= link_to 'Return', cocktails_path, class: 'btn btn-primary' %>